<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # redirect static assets
    RewriteCond $1 ^(css|images|js|json)
    RewriteRule ^(.*)$ /assets/$1 [L]
    
    # remove index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ /index.php?/$1 [L]
</IfModule>